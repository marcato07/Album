<h1>Welcome Album Webstie!</h1>
<p>Let's browse Album</p>
<% @album.each do |album| %>
  <h2><%= album.title %></h2>
  <p> Description:<%= album.description %></p>
  <p>For a list of photo in this album, <%= link_to 'click here', album %>.</p>
<% end %>

<div class="container-fluid" >
  <div class="row col-md-12 mt-5">
    <div class="col-md-8">
      <div class="col-md-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>